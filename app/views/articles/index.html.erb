<div class="container">
  <H1>Derniers Articles</H1>
  <div class="cards-recent">
    <% @articles.each do |article| %>
    <div class="card-recent">
        <% if article.cover.attached?%>
        <div class="card-recent-visuel" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path article.cover.key , alt: article.image, height: 400,  crop: :fit %>')">
        <% end %>
        </div>
      <div class="card-recent-footer">
        <%= link_to article.title, article_path(article) %>
    </div>
  </div>
  <% end %>
</div>
